    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\lib\\index.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "preLaunchTask": "npm: build"
        },
        {
          "type": "node",
          "request": "launch",
          "name": "Launch Client",
          "skipFiles": [
              "<node_internals>/**"
          ],
          "program": "${workspaceFolder}\\lib\\client.js",
          "outFiles": [
              "${workspaceFolder}/**/*.js"
          ],
          "preLaunchTask": "npm: build"
      }
    ]
}